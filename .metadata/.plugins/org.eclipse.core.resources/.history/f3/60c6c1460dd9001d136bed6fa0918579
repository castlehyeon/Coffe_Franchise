import menu.Menu;
import store.Headquarter;
import store.Store;

public class TestMain {

	public static void Main(String[] args) {

		Headquarter douzoneCoffee = new Headquarter();

		//메뉴를 추가한다.
		douzoneCoffee.createMenu(new Menu(1, "아메리카노", 1000));
		douzoneCoffee.createMenu(new Menu(2, "라떼", 2000));
		douzoneCoffee.createMenu(new Menu(3, "망고", 2500));
		douzoneCoffee.createMenu(new Menu(4, "딸리스무디", 2500));
		douzoneCoffee.showMenuList();
		
		//메뉴를 삭제한다.
		douzoneCoffee.deleteMenu(4);
		
		//메뉴를 수정한다.
		//douzoneCoffee.updateMenu(4);
		
		douzoneCoffee.showMenuList();
		
		//가맹점을 생성한다.
		Store a = new Store("1", "강촌", "강원도 강촌 1번지", "123-456-789");
		Store b = new Store("2", "을지로", "서울 울지로입구", "123-456-789");
		Store c = new Store("3", "부산", "부산 동구", "123-456-789");
		
		//가맹점을 추가한다.
		douzoneCoffee.addStore(a);
		douzoneCoffee.addStore(b);
		douzoneCoffee.addStore(c);
		
		//가맹점 리스트를 보여준다.
		douzoneCoffee.showStoreList();
		System.out.println(a.toString());
		
		//가맹점 총 매출을 보여준다
		douzoneCoffee.storeSalseList();
		
		
		
	}

}