import menu.Menu;
import store.Headquarter;
import store.Store;

public class Main {

	public static void main(String[] args) {

		Headquarter douzoneCoffee = new Headquarter();

		//메뉴를 추가한다.
		douzoneCoffee.createMenu(new Menu(1, "아메리카노", 1000));
		douzoneCoffee.createMenu(new Menu(2, "라떼", 2000));
		douzoneCoffee.createMenu(new Menu(3, "망고", 2500));
		douzoneCoffee.createMenu(new Menu(4, "딸리스무디", 2500));
		douzoneCoffee.showMenuList();
		
		//메뉴를 삭제한다.
		douzoneCoffee.deleteMenu(4);
		
		//메뉴를 수정한다.
		//douzoneCoffee.updateMenu(4);
		
		douzoneCoffee.showMenuList();
		
		
		douzoneCoffee.addStore(new Store("1", "강촌지점", "강원도 강촌 1번지", "123-456-789", ));
	}

}